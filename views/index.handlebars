<script>
    $(".devourBtn").click(function (event) {
        const id = event.target.id;
        console.log(id);
        $.ajax({
            url: `/api/burgers/${id}`,
            method: "PUT"
        }).then(location.reload())
    })

   $(".addBtn").click(function (event) {
        const burgerName = {
         burger_name:  $('#burgerName').val().trim()
        }


        console.log("burgerName", burgerName);
              $.ajax({
            url: `/api/burgers`,
            method: "POST",
            data: burgerName
        }).then(location.reload())
      
    })
    

</script>